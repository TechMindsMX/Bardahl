<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" type="plugin" group="content">
	<name>plg_content_contactform</name>
	<author>Sebastien Chartier</author>
	<creationDate>February 2011</creationDate>
	<copyright>Copyright (C) 2011 ChartierMedia.com. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>sebastien.chartier@gmail.com</authorEmail>
	<authorUrl>www.chartiermedia.com</authorUrl>
	<version>2.5.0</version>
	<description>PLG_CONTENT_CONTACTFORM_XML_DESCRIPTION</description>
	<files>
		<filename plugin="contactform">contactform.php</filename>
		<filename>ajax.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<folder>displays</folder>
		<folder>adm</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_contactform.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_contactform.sys.ini</language>
		<language tag="fr-FR">language/fr-FR/fr-FR.plg_content_contactform.ini</language>
		<language tag="fr-FR">language/fr-FR/fr-FR.plg_content_contactform.sys.ini</language>
	</languages>
	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="debug" type="radio"
					default="0"
					description="PLG_CONTENT_CONTACTFORM_DEBUG_DESC"
					label="PLG_CONTENT_CONTACTFORM_DEBUG_LABEL"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
                                <field  name="captcha"
                                        type="radio"
                                        default="1"
                                        label="PLG_CONTENT_CONTACTFORM_CAPTCHA_LABEL"
                                        description="PLG_CONTENT_CONTACTFORM_CAPTCHA_DESC" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

                                <field name="disable_send" type="radio"
					default="0"
					description="PLG_CONTENT_CONTACTFORM_DISABLE_SEND_DESC"
					label="PLG_CONTENT_CONTACTFORM_DISABLE_SEND_LABEL"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>

			<fieldset name="advanced">

                                <field name="sender_name_size" type="text" default="40" label="PLG_CONTENT_CONTACTFORM_YOURNAME_SIZE_LABEL" description="PLG_CONTENT_CONTACTFORM_YOURNAME_SIZE_DESC" size="4" />

                                <field name="sender_email_size" type="text" default="40" label="PLG_CONTENT_CONTACTFORM_YOUREMAIL_SIZE_LABEL" description="PLG_CONTENT_CONTACTFORM_YOUREMAIL_SIZE_DESC" size="4" />

                                <field name="subject_size" type="text" default="40" label="PLG_CONTENT_CONTACTFORM_SUBJECT_SIZE_LABEL" description="PLG_CONTENT_CONTACTFORM_SUBJECT_SIZE_DESC" size="4" />

                                <field name="message_cols" type="text" default="55" label="PLG_CONTENT_CONTACTFORM_MESSAGE_COLS_LABEL" description="PLG_CONTENT_CONTACTFORM_MESSAGE_COLS_DESC" size="4" />

                                <field name="message_rows" type="text" default="14" label="PLG_CONTENT_CONTACTFORM_MESSAGE_ROWS_LABEL" description="PLG_CONTENT_CONTACTFORM_MESSAGE_ROWS_DESC" size="4" />



                                <field name="title" type="text" label="PLG_CONTENT_CONTACTFORM_TITLE_LABEL" description="PLG_CONTENT_CONTACTFORM_TITLE_DESC" size="30" />

                                <field name="success_message" type="text" label="PLG_CONTENT_CONTACTFORM_SUCCESS_LABEL" description="PLG_CONTENT_CONTACTFORM_SUCCESS_DESC" size="30" />

                                <field name="error_message" type="text" label="PLG_CONTENT_CONTACTFORM_ERROR_LABEL" description="PLG_CONTENT_CONTACTFORM_ERROR_DESC" size="30" />
			</fieldset>
		</fields>
	</config>
</extension>
